@model ASP_1.Models.Forum.ForumTopicsModel
@{
    ViewData["Title"] = "Вопрос";
}

<h1 class="display-4">@Model.Title</h1>
<div class="card">
    <div class="card-body">
        @Model.Description
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach(var Post in Model.Posts)
        {
            @Html.DisplayFor(m => Post, "ForumPost")
        }
    </div>
</div>

@if (Model.UserCanCreate)
{
    <div class="row">
        <div class="col col-6">
            <h5>Дать ответ</h5>
            @if (Model.CreateMessage is not null)
            {
                <h6>
                    <strong style='color: @(Model.isMessagePositive==true?"green":"red")'>@Model.CreateMessage</strong>
                </h6>
            }
            <form method="post" asp-action="CreatePost">
                <div class="form-group">
                    <label for="post-content" class="form-label">Ответ:</label>
                    <textarea class="form-control" id="post-content"
                              name="post-content"
                              placeholder="Введите текст"
                              rows="3">@(Model.formModel is null ? "" : Model.formModel.Content)</textarea>
                </div>
                <input type="hidden" name="topic-id" value="@Model.TopicId" />
                <input type="hidden" name="reply-id" value="@(Model.formModel is null? "" : Model.formModel.ReplyId)"/>
                <button class="btn btn-light mt-3" type=submit>Опубликовать</button>
            </form>
        </div>
    </div>
}